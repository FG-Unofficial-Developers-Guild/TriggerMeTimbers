<?xml version="1.0" encoding="UTF-8"?>

<root>
	<template name="list_triggercomponents">
		<list_column>
			<anchored merge="delete" />
			<child merge="delete" />
			<sortby merge="delete" />
		</list_column>
	</template>

	<template name="parameterlist">
		<windowlist name="parameters">
			<anchored to='contentanchor'>
				<left />
				<top anchor="bottom" relation="relative" offset="5"	/>
				<right />
			</anchored>
			<script file="triggers/scripts/parameterlist.lua" />
			<class>empty_trigger_parameter</class>
			<noscroll />
			<skipempty />
		</windowlist>
	</template>

	<template name="tooltipcomboboxc">
		<comboboxc>
			<script file="triggers/scripts/tooltipcombobox.lua" />
		</comboboxc>
	</template>
</root>